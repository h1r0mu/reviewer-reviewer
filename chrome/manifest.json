{
  "name": "API_SAMPLE",
  "manifest_version": 2,
  "version": "1.0",
  "browser_action": {
    "default_title": "API_SAMPLE",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "js": ["js/lib/jquery.min.js", "js/content_scripts.js"],
      "matches": ["http://www.amazon.co.jp/*", "https://www.amazon.co.jp/*"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
